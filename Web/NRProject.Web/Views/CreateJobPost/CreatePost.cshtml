@model NRProject.Web.ViewModels.JobPost.InputJobPostViewModel;

@{
    this.ViewData["Title"] = "Create Job";
}
<h2 class="text-center">Create Job Post</h2>
    <form method="post" asp-action="CreatePost">
        <input asp-for="Title" class="form-control form-control-lg" type="text" placeholder="Title" required>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Content</label>
            <textarea asp-for="Content" class="form-control" id="exampleFormControlTextarea1" rows="3" required></textarea>
        </div>
        <div class="form-group">
            <label asp-for="JobCategoryId">Job Cateogry</label>
            <select asp-for="JobCategoryId" class="form-control" id="exampleFormControlSelect2" required>
                <option value=1>Auto Repair</option>
                <option value=2>House Maintance</option>
                <option value=3>Gardening</option>
                <option value=4>Photography</option>
                <option value=5>Others</option>
            </select>
        </div>
        <input type="submit" class="btn btn-primary" />
    </form>
