@using NRProject.Common
@{
    this.ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<link rel="stylesheet" href="css/indexStyle.css" type="text/css">
<div class="bodies">
    <div class="square">
        <span></span>
        <span></span>
        <span></span>
        <div class="content">
            <h2>Register</h2>
            <p>
              You can register here so you can start earning money with the most revolutionary platform
            </p>
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </div>
    </div>
    <div class="square1">
        <span></span>
        <span></span>
        <span></span>
        <div class="content1">
            <h2>Login</h2>
            <p>
                You already took the first step of earning your own money so what are you waiting for Login!
            </p>
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </div>
    </div>
    @if (!this.User.Identity.IsAuthenticated)
    {
        <div class="row">
            <div class="col-6 d-flex px-0 mt-2">
                <div class="col">
                    <button type="button" class="btn btn-primary btn-lg mr-3">
                        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
                    </button>
                    <button type="button" class="btn btn-primary btn-lg">
                        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    </button>
                </div>
            </div>
        </div>
    }
</div>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
